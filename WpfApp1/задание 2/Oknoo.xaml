<Window x:Class="WpfApp1.задание_2.Oknoo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.задание_2"
        mc:Ignorable="d"
        Title="Oknoo" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Name="OpenListBtn"
                    Content="Открыть список"
                    Click="OpenListBtn_Click"/>


            <Separator Width="20" Height="0"/>

            <Button Name="AddItemBtn"
                    Content="Добавить элемент"
                    Click="AddItemBtn_Click"/>
        </StackPanel>

        <Frame Name="MainFrame" Grid.Row="2" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
